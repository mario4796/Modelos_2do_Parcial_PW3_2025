@using Gestion_de_Reservas.Data.EF
@model List<Reserva>
@{
}

<h2 class="mb-4">Visualizar Reservas</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="get" action="Visualizar" class="row g-2 align-items-end mb-3">
    <div class="col-auto">
        <label for="IdDestino" class="form-label">Destinos</label>
        <select class="form-select" id="IdDestino" name="IdDestino">
            <option value="">Seleccione un destino</option>
            @foreach (var destino in (List<Destino>)ViewBag.Destinos)
            {
                @if (ViewBag.EscuderiaSeleccionada == destino.IdDestino)
                {
                    <option selected value="@destino.IdDestino">@destino.Nombre</option>
                }
                else
                {
                    <option value="@destino.IdDestino">@destino.Nombre</option>
                }
            }
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Filtrar</button>
        <a asp-action="Visualizar" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No hay reservas activas para mostrar.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Id Reserva</th>
                    <th>Cantidad de Pasajeros</th>
                    <th>Fecha de Inicio</th>
                    <th>Fecha de Fin</th>
                    <th>Destino</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reserva in Model)
                {
                    <tr>
                        <td>@reserva.IdReserva</td>
                        <td>@reserva.CantidadPasajeros</td>
                        <td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
                        <td>@reserva.FechaFin.ToString("dd/MM/yyyy")</td>
                        <td>@reserva.IdDestinoNavigation.Nombre</td>
                        <td><a href="/Reservas/EliminarReserva/@reserva.IdReserva" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar reserva?');">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}