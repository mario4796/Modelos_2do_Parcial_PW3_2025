@using GestionSuperheroes.Data.EF
@model List<Superheroe>

<h2 class="mb-4">Lista de Superheroes</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<form method="get" action="ListarSuperheroes" class="row g-2 align-items-end mb-3">
    <div class="col-auto">
        <label for="IdUniverso" class="form-label">Universos</label>
        <select class="form-select" id="IdUniverso" name="IdUniverso">
            <option value="">Seleccione un universo</option>
            @foreach (var universo in (List<Universo>)ViewBag.universos)
            {
                @if (ViewBag.UniversoSeleccionado == universo.IdUniverso)
                {
                    <option selected value="@universo.IdUniverso">@universo.NombreUniverso</option>
                }
                else
                {
                    <option value="@universo.IdUniverso">@universo.NombreUniverso</option>
                }
            }
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Filtrar</button>
        <a asp-action="ListarSuperheroes" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No hay superheroes para mostrar.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Id Superheroe</th>
                    <th>Nobmre Superheroe</th>
                    <th>Universo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var superheroe in Model)
                {
                    <tr>
                        <td>@superheroe.IdSuperheroe</td>
                        <td>@superheroe.NombreSuperheroe</td>
                        <td>@superheroe.IdUniversoNavigation.NombreUniverso</td>
                        <td><a href="/Superheroe/EliminarSuperheroe/@superheroe.IdSuperheroe" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar Superheroe?');">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}